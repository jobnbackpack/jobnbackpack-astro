---
interface Props {
    title: string;
    imgUrl: string;
    navBackLink?: string;
}

const { title, imgUrl, navBackLink = '/' } = Astro.props;
---

<header class="relative h-52 overflow-hidden bg-gray-900">
    <div class="absolute z-20 flex w-full h-full">
        <div
            class="relative z-30 w-5/6 pl-5 text-white py-4 md:w-1/2 flex flex-col"
        >
            <h2 class="text-7xl flex-1 h-full align-middle">{title}</h2>
            <a
                class="border border-gray-300 rounded-md p-2 w-fit hover:bg-gray-800"
                href={navBackLink}
                >go back
            </a>
        </div>
        <div class="absolute top-0 right-0 flex w-full h-full">
            <div class="w-1/3 h-full bg-gray-900"></div>
            <div class="relative w-1/3">
                <svg
                    fill="currentColor"
                    viewBox="0 0 100 100"
                    class="absolute inset-y-0 z-20 h-full text-gray-900"
                >
                    <polygon id="diagonal" points="0,0 100,0 50,100 0,100"
                    ></polygon>
                </svg>
                <svg
                    fill="currentColor"
                    viewBox="0 0 100 100"
                    class="absolute inset-y-0 z-10 h-full ml-2 text-[#990000]"
                >
                    <polygon points="0,0 100,0 50,100 0,100"></polygon>
                </svg>
            </div>
        </div>
    </div>
    <div class="absolute top-0 right-0 block w-9/12 h-full">
        <img class="h-full min-w-full object-cover" src={imgUrl} />
    </div>
</header>
